<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %>
    
    <!-- error message -->
    <%- messages() %> <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
    
    <div class="managment">
      <!-- messages -->
      <%- messages() %>

      <h2>Welcome <%= locals.accountData.account_firstname %></h2>
      <% if (locals.accountData.accountType === "Client") { %>
        <h2>Welcome <%= locals.accountData.firstName %></h2>
      <% } else if (locals.accountData.accountType === "Employee" || locals.accountData.accountType === "Admin") { %>
        <h2>Welcome <%= locals.accountData.firstName %></h2>
        <h3>Inventory Management</h3>
        <p><a href="/inv">Access Inventory Management</a></p>
      <% } %>
  
    
      <h3>Manage Account</h3>
      
      <p>You're Logged in</p>
      <p><a href="/account/update/<%= locals.accountData.account_id %>">Edit Account Information</a></p>

    </div>