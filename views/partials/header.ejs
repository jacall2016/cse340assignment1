<header id="top-header">

  <span class="siteName">
    <a class="large-text" href="/" title="Return to home page">CSE Motors</a>
  </span>

  <div id="tools">
    <% if (locals.loggedin) { %>

      <h3 class="text-heading account_name">
        <a title="Welcome" href="/account/">Welcome <%= locals.accountData.account_firstname %></a>
        <a title="Click to log in" href="../account/logout">Logout</a>
      </h3>

    <% } else { %>
      <h3>
        <a title="Click to log in" class="link" href="/account/login">My Account</a>
      </h3>
    <% } %>
  </div>
</header>
